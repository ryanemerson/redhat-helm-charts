                    "description": "Labels that are added to the created Infinispan resources, e.g. Pods and Services.",
                    "items": {
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "key",
                            "value"
                        ]
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "type": [
                "object",
                "null"
            ]
        }
    },
    "$schema": "http://json-schema.org/schema#",
    "type": "object"
}
